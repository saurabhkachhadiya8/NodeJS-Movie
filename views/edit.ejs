<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <!-- bootstrap -->
    <link rel="stylesheet" href="/bootstrap.min.css">
    <!-- icon  -->
    <link rel="stylesheet" href="/all.min.css">
    <!-- font  -->
    <link href="https://fonts.googleapis.com/css2?family=Exo:ital,wght@0,100..900;1,100..900&display=swap"
        rel="stylesheet">
    <!-- css -->
    <link rel="stylesheet" href="/style.css">

    <style>
        * {
            outline: none;
        }

        label {
            padding-top: 10px;
            margin-bottom: 3px !important;
        }
        .add input,textarea{
            background-color: #ffffff11 !important;
            color: #fff !important;
            padding: 10px 15px !important;
            font-size: large !important;
        }
        .add input::placeholder,textarea::placeholder{
            color: #fff !important;
        }
        input[type="submit"]:hover{
            background-color: #fff !important;
            color: #000 !important;
            font-weight: 600;
        }
    </style>
</head>

<body
    style="background: url('https://wallpapers.com/images/high/movie-poster-background-p5qblffj7cvswl5g.webp') no-repeat center;background-size: cover;background-blend-mode: darken;background-color: #5f0000;color: #fff;height: 100vh;">
    <%- include('navbar') %>

        <section class="add py-5">
            <div class="container-fluid px-5">
                <form action="/updateticket" method="post" enctype="multipart/form-data" class="col-4 mx-auto fs-5">
                    <input type="hidden" name="updateId" value="<%= single._id %>">
                    <div class="mb-3 d-flex justify-content-between">
                        <div>
                            <label for="image" class="form-label">Image</label>
                            <input type="file" class="form-control" name="image">
                        </div>
                        <img src="<%= single.image %>" alt="<%= single.image %>" style="max-height: 250px;max-width: 50%;object-fit: contain;">
                    </div>
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" name="name" placeholder="Enter Name" value="<%= single.name %>">
                    </div>
                    <div class="mb-3">
                        <label for="price" class="form-label">Price</label>
                        <input type="number" class="form-control" name="price" placeholder="Enter Price" value="<%= single.price %>">
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea rows="3" class="form-control" placeholder="Enter Description"
                            name="description"><%= single.description %></textarea>
                    </div>
                    <input type="Submit" value="Update Ticket" class="btn btn-light mt-3 py-3 form-control">
                </form>
            </div>
        </section>

        <script src="/bootstrap.bundle.min.js"></script>
</body>

</html>